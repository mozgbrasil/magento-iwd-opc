                <rel>stylesheet</rel>
                <href>//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css</href>
            </action>
        </reference>
    </iwd_free_opc_locked_handler>
    <adminhtml_iwd_opc_locked_types>
        <update handle="iwd_free_opc_locked_handler"/>
